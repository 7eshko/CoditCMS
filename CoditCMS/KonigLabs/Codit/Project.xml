<?xml version="1.0"?>
<settings xmlns="urn:settings" xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:schemaLocation="urn:settings Settings.xsd">
	<list orderAsc="Sort">
		<!--selectRowProperty="IsDefault"-->

		<global>
			<create/>
		</global>

		<actions>
			<visibility/>
			<sort field="Sort"/>
			<edit/>
			<delete/>
		</actions>

		<cols>
			<string name="Name" title="Название"/>			
		</cols>

	</list>

	<form>
		<tab name="General">
			<string name="Name" title="Название" />
      <select name="ProjectCategoryID" title="Категория" reference="Category" optionTitle="Name" optionValue="Id" levels="true" localizable="true">
        <option>Нет</option>
      </select>
			<wysiwyg name="Description" title="Описание" />
		</tab>
    <tab name="Images">
      <file name="Files" isImage="true" size="300" title="Прикреплённые изображения" showTitle="true" />
    </tab>
		<tab name="Metadata">			
			<string name="MetaTitle" title="MetaTitle" />
			<string name="MetaKeywords" title="MetaKeywords" />
			<textarea name="MetaDescription" title="MetaDescription" />
		</tab>
	</form>
</settings>